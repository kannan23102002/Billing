<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ›’ Fresh Mart Grocery</h1>
            <p>Your Friendly Neighborhood Store</p>
        </div>

        <div class="main-content">
            <div class="section">
                <h2>Add Item</h2>
                <div class="form-group">
                    <label for="itemName">Item Name</label>
                    <select id="itemName">
                        <option value="">Select Item</option>
                        <option value="Apple">Apple</option>
                        <option value="Banana">Banana</option>
                        <option value="Orange">Orange</option>
                        <option value="Milk">Milk</option>
                        <option value="Bread">Bread</option>
                        <option value="Eggs">Eggs</option>
                        <option value="Rice">Rice (1kg)</option>
                        <option value="Sugar">Sugar (1kg)</option>
                        <option value="Oil">Cooking Oil (1L)</option>
                        <option value="Tomato">Tomato</option>
                        <option value="Potato">Potato</option>
                        <option value="Onion">Onion</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" min="1" value="1">
                </div>

                <div class="form-group">
                    <label for="price">Price per Unit (â‚¹)</label>
                    <input type="number" id="price" step="0.01" min="0">
                </div>

                <button class="btn" onclick="addItem()">Add to Bill</button>

                <div class="summary">
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span id="subtotal">â‚¹0.00</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax (5%):</span>
                        <span id="tax">â‚¹0.00</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span id="total">â‚¹0.00</span>
                    </div>
                </div>

                <button class="btn btn-secondary" onclick="generateBill()">Generate Bill</button>
                <button class="btn btn-secondary" onclick="clearAll()">Clear All</button>
            </div>

            <div class="section">
                <h2>Bill Items</h2>
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="itemsBody">
                        <tr>
                            <td colspan="5" style="text-align: center; color: #999;">No items added yet</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        let items = [];

        const itemPrices = {
            'Apple': 120,
            'Banana': 50,
            'Orange': 80,
            'Milk': 60,
            'Bread': 40,
            'Eggs': 80,
            'Rice': 60,
            'Sugar': 45,
            'Oil': 150,
            'Tomato': 40,
            'Potato': 30,
            'Onion': 35
        };

        document.getElementById('itemName').addEventListener('change', function() {
            const item = this.value;
            if (item && itemPrices[item]) {
                document.getElementById('price').value = itemPrices[item];
            }
        });

        function addItem() {
            const name = document.getElementById('itemName').value;
            const qty = parseInt(document.getElementById('quantity').value);
            const price = parseFloat(document.getElementById('price').value);

            if (!name || !qty || !price) {
                alert('Please fill all fields');
                return;
            }

            const total = qty * price;
            items.push({ name, qty, price, total });

            updateTable();
            updateSummary();

            document.getElementById('itemName').value = '';
            document.getElementById('quantity').value = 1;
            document.getElementById('price').value = '';
        }

        function deleteItem(index) {
            items.splice(index, 1);
            updateTable();
            updateSummary();
        }

        function updateTable() {
            const tbody = document.getElementById('itemsBody');
            
            if (items.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" style="text-align: center; color: #999;">No items added yet</td></tr>';
                return;
            }

            tbody.innerHTML = items.map((item, index) => `
                <tr>
                    <td>${item.name}</td>
                    <td>${item.qty}</td>
                    <td>â‚¹${item.price.toFixed(2)}</td>
                    <td>â‚¹${item.total.toFixed(2)}</td>
                    <td><button class="delete-btn" onclick="deleteItem(${index})">Delete</button></td>
                </tr>
            `).join('');
        }

        function updateSummary() {
            const subtotal = items.reduce((sum, item) => sum + item.total, 0);
            const tax = subtotal * 0.05;
            const total = subtotal + tax;

            document.getElementById('subtotal').textContent = `â‚¹${subtotal.toFixed(2)}`;
            document.getElementById('tax').textContent = `â‚¹${tax.toFixed(2)}`;
            document.getElementById('total').textContent = `â‚¹${total.toFixed(2)}`;
        }

        function generateBill() {
            if (items.length === 0) {
                alert('No items to generate bill');
                return;
            }

            const subtotal = items.reduce((sum, item) => sum + item.total, 0);
            const tax = subtotal * 0.05;
            const total = subtotal + tax;

            let billText = '====== FRESH MART GROCERY ======\n\n';
            billText += 'Date: ' + new Date().toLocaleDateString() + '\n';
            billText += 'Time: ' + new Date().toLocaleTimeString() + '\n\n';
            billText += '--------------------------------\n';
            
            items.forEach(item => {
                billText += `${item.name}\n`;
                billText += `  ${item.qty} x â‚¹${item.price.toFixed(2)} = â‚¹${item.total.toFixed(2)}\n`;
            });
            
            billText += '--------------------------------\n';
            billText += `Subtotal: â‚¹${subtotal.toFixed(2)}\n`;
            billText += `Tax (5%): â‚¹${tax.toFixed(2)}\n`;
            billText += `TOTAL: â‚¹${total.toFixed(2)}\n`;
            billText += '================================\n';
            billText += 'Thank you for shopping with us!\n';

            alert(billText);
            console.log(billText);
        }

        function clearAll() {
            if (items.length === 0 || confirm('Are you sure you want to clear all items?')) {
                items = [];
                updateTable();
                updateSummary();
            }
        }
    </script>
</body>
